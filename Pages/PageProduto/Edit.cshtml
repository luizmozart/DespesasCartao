@page
@model DespesasCartao.Pages.PageProduto.EditModel

@{
    ViewData["Title"] = "Editar";
}

<h1>@ViewData["Title"]</h1>

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Produto.IdProduto" />
            <div class="form-group">
                <label asp-for="Produto.Nome" class="control-label"></label>
                <input asp-for="Produto.Nome" class="form-control" />
                <span asp-validation-for="Produto.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.Descricao" class="control-label"></label>
                <input asp-for="Produto.Descricao" class="form-control" />
                <span asp-validation-for="Produto.Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.Preco" class="control-label"></label>
                <input asp-for="Produto.Preco" class="form-control" />
                <span asp-validation-for="Produto.Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.Estoque" class="control-label"></label>
                <input asp-for="Produto.Estoque" class="form-control" />
                <span asp-validation-for="Produto.Estoque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagemProduto" class="control-label"></label>
                <div class="custom-file-label col-4 d-block">
                    <input asp-for="ImagemProduto" class="custom-file-input" accept="image/*" />
                    <label class="custom-file-label">Clique aqui para alterar a imagem</label>
                </div>
                <span asp-validation-for="ImagemProduto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <img src="@Model.caminhoImagem" class="image-thunbnail" asp-append-version="true"
                     style="max-height:300px;max-width:300px;border:solid 1px gray;border-radius:5px;" />
            </div>
            <div class="form-group">
                <input type="submit" value="Alterar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Voltar para a listagem</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
